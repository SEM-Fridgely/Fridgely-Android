<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterfragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/diet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.adroitandroid.chipcloud.ChipCloud
        xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chip_cloud_diet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        chipcloud:deselectedColor="@color/deselected_color"
        chipcloud:deselectedFontColor="@color/deselected_font_color"
        chipcloud:selectedColor="@color/selected_color"
        chipcloud:selectedFontColor="@color/selected_font_color"
        chipcloud:deselectTransitionMS="300"
        chipcloud:selectTransitionMS="300"
        chipcloud:labels="@array/diet"
        chipcloud:selectMode="multi"
        chipcloud:allCaps="true"
        chipcloud:gravity="staggered"
        chipcloud:minHorizontalSpacing="32dp"
        chipcloud:verticalSpacing="16dp"
        chipcloud:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/diet_title"/>

    <TextView
        android:id="@+id/health_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/chip_cloud_diet"/>

    <com.adroitandroid.chipcloud.ChipCloud
        xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chip_cloud_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        chipcloud:deselectedColor="@color/deselected_color"
        chipcloud:deselectedFontColor="@color/deselected_font_color"
        chipcloud:selectedColor="@color/selected_color"
        chipcloud:selectedFontColor="@color/selected_font_color"
        chipcloud:deselectTransitionMS="300"
        chipcloud:selectTransitionMS="300"
        chipcloud:labels="@array/health"
        chipcloud:selectMode="multi"
        chipcloud:allCaps="true"
        chipcloud:gravity="staggered"
        chipcloud:minHorizontalSpacing="32dp"
        chipcloud:verticalSpacing="16dp"
        chipcloud:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/health_title"/>

    <TextView
        android:id="@+id/cuisine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/chip_cloud_health"/>

    <com.adroitandroid.chipcloud.ChipCloud
        xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chip_cloud_cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        chipcloud:deselectedColor="@color/deselected_color"
        chipcloud:deselectedFontColor="@color/deselected_font_color"
        chipcloud:selectedColor="@color/selected_color"
        chipcloud:selectedFontColor="@color/selected_font_color"
        chipcloud:deselectTransitionMS="300"
        chipcloud:selectTransitionMS="300"
        chipcloud:labels="@array/cuisine"
        chipcloud:selectMode="multi"
        chipcloud:allCaps="true"
        chipcloud:gravity="staggered"
        chipcloud:minHorizontalSpacing="32dp"
        chipcloud:verticalSpacing="16dp"
        chipcloud:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cuisine_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>